---
const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    name: 'GitHub',
    href: 'https://github.com/JPClow3',
    icon: 'github',
  },
  {
    name: 'LinkedIn',
    href: 'https://linkedin.com/in/joaopaulosantosgo',
    icon: 'linkedin',
  },
  {
    name: 'Email',
    href: 'mailto:joaopaulo.grv4@gmail.com',
    icon: 'email',
  },
];
---

<footer class="bg-[rgb(var(--color-bg-secondary))] border-t border-[rgb(var(--color-border))]">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
      <!-- Logo & Copyright -->
      <div class="text-center md:text-left">
        <a href="/" class="text-xl font-bold gradient-text">JP</a>
        <p class="mt-2 text-sm text-[rgb(var(--color-text-muted))]">
          &copy; {currentYear} João Paulo Gonçalves Santos. All rights reserved.
        </p>
      </div>

      <!-- Social Links -->
      <div class="flex items-center gap-4">
        {socialLinks.map((link) => (
          <a
            href={link.href}
            target={link.href.startsWith('http') ? '_blank' : undefined}
            rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
            class="p-2 rounded-lg text-[rgb(var(--color-text-secondary))] hover:text-[rgb(var(--color-accent))] hover:bg-[rgb(var(--color-bg-tertiary))] transition-colors"
            aria-label={link.name}
          >
            {link.icon === 'github' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            )}
            {link.icon === 'linkedin' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            )}
            {link.icon === 'email' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
            )}
          </a>
        ))}
      </div>
    </div>

    <!-- Bottom Text -->
    <div class="mt-8 pt-8 border-t border-[rgb(var(--color-border))] text-center">
      <p class="text-sm text-[rgb(var(--color-text-muted))]">
        Built with
        <a
          href="https://astro.build"
          target="_blank"
          rel="noopener noreferrer"
          class="text-[rgb(var(--color-accent))] hover:underline"
        >
          Astro
        </a>
        ,
        <a
          href="https://svelte.dev"
          target="_blank"
          rel="noopener noreferrer"
          class="text-[rgb(var(--color-accent))] hover:underline"
        >
          Svelte
        </a>
        &amp;
        <a
          href="https://tailwindcss.com"
          target="_blank"
          rel="noopener noreferrer"
          class="text-[rgb(var(--color-accent))] hover:underline"
        >
          Tailwind CSS
        </a>
      </p>
    </div>
  </div>
</footer>
