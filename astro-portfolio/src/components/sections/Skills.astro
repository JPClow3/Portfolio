---
import { ui } from '@/lib/i18n';
import ScrollReveal from '@/components/common/ScrollReveal.astro';
import Icon from '@/components/common/Icon.astro';

const t = ui.en;

// Technology skills with icons/labels
const technologies = [
  { name: 'React', icon: 'react', color: 'text-blue-400' },
  { name: 'TypeScript', icon: 'typescript', color: 'text-blue-600' },
  { name: 'Astro', icon: 'astro', color: 'text-orange-500' },
  { name: 'Svelte', icon: 'svelte', color: 'text-orange-600' },
  { name: 'Tailwind CSS', icon: 'tailwind', color: 'text-cyan-400' },
  { name: 'Python', icon: 'python', color: 'text-yellow-500' },
  { name: 'Node.js', icon: 'nodejs', color: 'text-green-600' },
  { name: 'Git', icon: 'git', color: 'text-orange-600' },
  { name: 'GitHub', icon: 'github', color: 'text-gray-800 dark:text-white' },
  { name: 'Power Automate', icon: 'power', color: 'text-blue-500' },
];

const certifications = [
  'Postman API Fundamentals Student Expert',
  'Software Testing Certification',
];

// Skill categories for detailed view
const skillCategories = [
  {
    name: 'Front-End Development',
    icon: 'code',
    skills: ['React', 'TypeScript', 'Astro', 'Svelte', 'Tailwind CSS', 'HTML/CSS', 'JavaScript'],
    proficiency: 'Advanced',
  },
  {
    name: 'Testing & QA',
    icon: 'check',
    skills: ['Automated Testing', 'Robot Framework', 'API Testing (Postman)', 'Manual Testing'],
    proficiency: 'Advanced',
  },
  {
    name: 'Automation & Low-Code',
    icon: 'briefcase',
    skills: ['Power Automate', 'Power Apps', 'Power BI', 'SharePoint'],
    proficiency: 'Advanced',
  },
  {
    name: 'Back-End & Tools',
    icon: 'code',
    skills: ['Python', 'Node.js', 'SQL', 'REST APIs', 'Git', 'SAP'],
    proficiency: 'Intermediate',
  },
];
---

<section id="skills" class="py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <ScrollReveal animation="fade-up">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold mb-4">{t['skills.title']}</h2>
        <p class="text-[rgb(var(--color-text-muted))] max-w-2xl mx-auto">
          Technologies and tools I use to bring ideas to life.
        </p>
      </div>
    </ScrollReveal>

    <!-- Technology Icon Grid -->
    <ScrollReveal animation="fade-up" delay={100}>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4 sm:gap-6 mb-16">
        {technologies.map((tech, index) => (
          <div
            class="group bg-[rgb(var(--color-bg-secondary))] p-6 rounded-xl border border-[rgb(var(--color-border))] hover:border-[rgb(var(--color-accent)/0.5)] transition-all duration-300 hover:shadow-lg hover:-translate-y-1 flex flex-col items-center justify-center text-center"
            style={`animation-delay: ${index * 50}ms`}
          >
            <div class={`w-12 h-12 mb-3 flex items-center justify-center text-4xl ${tech.color} group-hover:scale-110 transition-transform duration-300`}>
