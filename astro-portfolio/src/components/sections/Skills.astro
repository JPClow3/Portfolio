        ))}
      </div>
    </ScrollReveal>

    <!-- Skill Categories -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
      {skillCategories.map((category, index) => (
        <ScrollReveal animation="fade-up" delay={200 + (index * 100)}>
          <div class="h-full p-6 rounded-2xl bg-[rgb(var(--color-bg-secondary))] border border-[rgb(var(--color-border))] hover:border-[rgb(var(--color-accent)/0.5)] transition-all duration-300 hover:shadow-lg">
            <div class="flex items-center gap-3 mb-4">
              <div class="p-2.5 rounded-xl bg-[rgb(var(--color-accent)/0.1)] text-[rgb(var(--color-accent))]">
                <Icon name={category.icon} size={20} />
              </div>
              <div>
                <h3 class="font-semibold text-sm">{category.name}</h3>
                <span class="text-xs text-[rgb(var(--color-accent))]">{category.proficiency}</span>
              </div>
            </div>
            <ul class="space-y-2">
              {category.skills.map((skill) => (
                <li class="flex items-center gap-2 text-sm text-[rgb(var(--color-text-secondary))]">
                  <span class="w-1.5 h-1.5 rounded-full bg-[rgb(var(--color-accent)/0.5)]"></span>
                  {skill}
                </li>
              ))}
            </ul>
          </div>
        </ScrollReveal>
      ))}
    </div>

    <!-- Certifications -->
    <ScrollReveal animation="fade-up" delay={600}>
      <div class="text-center">
        <h3 class="text-xl font-semibold mb-6">{t['skills.certifications']}</h3>
        <div class="flex flex-wrap justify-center gap-4">
          {certifications.map((cert) => (
            <div class="group px-6 py-3 rounded-xl bg-[rgb(var(--color-bg-secondary))] border border-[rgb(var(--color-border))] hover:border-[rgb(var(--color-accent)/0.5)] transition-all duration-300 hover:shadow-lg">
              <span class="text-sm font-medium text-[rgb(var(--color-text-primary))] flex items-center gap-2">
                <Icon name="check" size={16} class="text-[rgb(var(--color-accent))] group-hover:scale-110 transition-transform" />
                {cert}
              </span>
            </div>
          ))}
        </div>
      </div>
    </ScrollReveal>
  </div>
</section>
