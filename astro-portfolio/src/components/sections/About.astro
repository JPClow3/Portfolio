---
import { ui } from '@/lib/i18n';
import ScrollReveal from '@/components/common/ScrollReveal.astro';
import Icon from '@/components/common/Icon.astro';

const t = ui.en;
---

<section id="about" class="py-24 bg-[rgb(var(--color-bg-secondary))]">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Image / Visual -->
      <ScrollReveal animation="fade-right">
        <div class="relative">
          <div
            class="aspect-square rounded-2xl bg-gradient-to-br from-[rgb(var(--color-accent))] to-[rgb(168_85_247)] p-1"
          >
            <div
              class="w-full h-full rounded-2xl bg-[rgb(var(--color-bg-secondary))] flex items-center justify-center overflow-hidden"
            >
              <!-- Profile Image with fallback -->
              <img
                src="/images/profile.jpg"
                alt="João Paulo Gonçalves Santos - Front-End Developer"
                class="w-full h-full object-cover"
                onerror="this.style.display='none';this.nextElementSibling.style.display='flex';"
              />
              <!-- Fallback if image not found -->
              <div class="text-center p-8 hidden flex-col items-center justify-center w-full h-full" style="display: none;">
                <div
                  class="w-32 h-32 mx-auto mb-6 rounded-full bg-gradient-to-br from-[rgb(var(--color-accent))] to-[rgb(168_85_247)] flex items-center justify-center shadow-lg shadow-[rgb(var(--color-accent)/0.3)]"
                >
                  <span class="text-4xl font-bold text-white">JP</span>
                </div>
                <p class="text-[rgb(var(--color-text-secondary))]">
                  {t['profile.status']}
                </p>
              </div>
            </div>
          </div>

          <!-- Decorative elements -->
          <div
            class="absolute -top-4 -right-4 w-24 h-24 bg-[rgb(var(--color-accent)/0.2)] rounded-full blur-2xl animate-pulse"
          >
          </div>
          <div
            class="absolute -bottom-4 -left-4 w-32 h-32 bg-[rgb(168_85_247/0.2)] rounded-full blur-2xl animate-pulse"
            style="animation-delay: 1s;"
          >
          </div>
        </div>
      </ScrollReveal>

      <!-- Content -->
      <div>
        <ScrollReveal animation="fade-up">
          <h2 class="text-3xl sm:text-4xl font-bold mb-6">
            {t['summary.title']}
          </h2>
        </ScrollReveal>

        <ScrollReveal animation="fade-up" delay={100}>
          <p class="text-lg text-[rgb(var(--color-text-secondary))] leading-relaxed mb-8">
            {t['summary.text']}
          </p>
        </ScrollReveal>

        <!-- Education -->
        <ScrollReveal animation="fade-up" delay={200}>
          <div
            class="glass-card p-6 rounded-xl hover-lift hover-glow"
          >
            <div class="flex items-center gap-3 mb-3">
              <div class="p-2 rounded-lg bg-[rgb(var(--color-accent)/0.1)]">
                <Icon name="graduation" size={20} class="text-[rgb(var(--color-accent))]" />
              </div>
              <h3 class="text-xl font-semibold">{t['education.title']}</h3>
            </div>
            <p class="font-medium text-[rgb(var(--color-accent))]">
              {t['education.degree']}
            </p>
            <p class="text-[rgb(var(--color-text-secondary))]">
              {t['education.institution']}
            </p>
            <p class="text-sm text-[rgb(var(--color-text-muted))] mt-2 flex items-center gap-2">
              <Icon name="calendar" size={14} />
              {t['education.status']}
            </p>
          </div>
        </ScrollReveal>
      </div>
    </div>
  </div>
</section>
