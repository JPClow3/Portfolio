              {tech.icon === 'typescript' && (
                <div class="w-10 h-10 flex items-center justify-center border-2 border-current rounded font-bold text-lg">TS</div>
              )}
              {tech.icon === 'astro' && (
                <svg class="w-10 h-10" viewBox="0 0 24 24" fill="currentColor">
