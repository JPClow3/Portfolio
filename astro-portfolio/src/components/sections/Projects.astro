---
import { getCollection } from 'astro:content';
import { ui } from '@/lib/i18n';
import Icon from '@/components/common/Icon.astro';
import ScrollReveal from '@/components/common/ScrollReveal.astro';

const t = ui.en;

const projects = await getCollection('projects', ({ data }) => data.lang === 'en');
const sortedProjects = projects.sort((a, b) => a.data.order - b.data.order);

// Helper to get project initials for fallback
function getInitials(title: string): string {
  return title
    .split(' ')
    .map(word => word[0])
    .join('')
    .toUpperCase()
    .slice(0, 2);
}

// Gradient variations for visual interest
const gradients = [
  'from-[rgb(var(--color-accent))] via-violet-500 to-purple-500',
  'from-emerald-500 via-teal-500 to-cyan-500',
  'from-orange-500 via-red-500 to-pink-500',
  'from-blue-500 via-indigo-500 to-violet-500',
  'from-rose-500 via-pink-500 to-fuchsia-500',
  'from-amber-500 via-yellow-500 to-lime-500',
];
---

<section id="projects" class="py-24 bg-[rgb(var(--color-bg-secondary))]">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <ScrollReveal animation="fade-up">
      <h2 class="text-3xl sm:text-4xl font-bold text-center mb-4">
        {t['projects.title']}
      </h2>
      <p class="text-center text-[rgb(var(--color-text-muted))] mb-16 max-w-2xl mx-auto">
        A selection of projects I've worked on, showcasing my skills in various technologies.
      </p>
    </ScrollReveal>

    <!-- Projects Bento Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        sortedProjects.map((project, index) => (
          <ScrollReveal
            animation="fade-up"
            delay={100 + (index * 100)}
            tag="article"
            class:list={[
              "group relative bg-[rgb(var(--color-bg-primary))] rounded-2xl border border-[rgb(var(--color-border))] overflow-hidden transition-all duration-300",
              "hover:border-[rgb(var(--color-accent)/0.5)] hover:shadow-xl hover:shadow-[rgb(var(--color-accent)/0.1)]",
              "hover:-translate-y-1",
              project.data.featured && "md:col-span-2 lg:col-span-2"
            ]}
          >
            {/* Featured badge */}
            {project.data.featured && (
              <div class="absolute top-4 right-4 z-10">
                <span class="px-3 py-1 text-xs font-medium bg-[rgb(var(--color-accent))] text-white rounded-full shadow-lg">
                  Featured
                </span>
              </div>
            )}

            {/* Project Visual - Gradient with Initials */}
            <div class:list={[
              "relative overflow-hidden",
              project.data.featured ? "aspect-[2/1]" : "aspect-video"
            ]}>
              {/* Gradient Background - varied per project */}
              <div class:list={[
                "absolute inset-0 bg-gradient-to-br opacity-90 transition-all duration-300 group-hover:opacity-100 group-hover:scale-105",
                gradients[index % gradients.length]
              ]} />

              {/* Grid Pattern Overlay */}
              <div class="absolute inset-0 bg-[linear-gradient(rgb(255_255_255/0.1)_1px,transparent_1px),linear-gradient(90deg,rgb(255_255_255/0.1)_1px,transparent_1px)] bg-[size:20px_20px]" />

              {/* Project Initials */}
              <div class="absolute inset-0 flex items-center justify-center">
                <span class="text-6xl md:text-7xl font-bold text-white/30 select-none group-hover:scale-110 transition-transform duration-300">
                  {getInitials(project.data.title)}
                </span>
              </div>

              {/* Hover Gradient Overlay */}
              <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none">
                <div class="absolute inset-0 bg-gradient-to-t from-[rgb(var(--color-bg-primary))] via-transparent to-transparent" />
              </div>
            </div>

            {/* Content */}
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2 group-hover:text-[rgb(var(--color-accent))] transition-colors">
                {project.data.title}
              </h3>
              <p class:list={[
                "text-[rgb(var(--color-text-secondary))] mb-4",
                project.data.featured ? "line-clamp-3" : "line-clamp-2"
              ]}>
                {project.data.description}
              </p>

              {/* Tech tags */}
              <div class="flex flex-wrap gap-2 mb-6">
                {project.data.tech.slice(0, project.data.featured ? 6 : 4).map((tech) => (
                  <span class="px-3 py-1 text-xs font-medium bg-[rgb(var(--color-bg-secondary))] text-[rgb(var(--color-text-muted))] rounded-full border border-[rgb(var(--color-border))] hover:border-[rgb(var(--color-accent)/0.5)] transition-colors">
                    {tech}
                  </span>
                ))}
                {project.data.tech.length > (project.data.featured ? 6 : 4) && (
                  <span class="px-3 py-1 text-xs font-medium text-[rgb(var(--color-text-muted))]">
                    +{project.data.tech.length - (project.data.featured ? 6 : 4)} more
                  </span>
                )}
              </div>

              {/* Links */}
              <div class="flex items-center gap-4">
                {project.data.github && (
                  <a
                    href={project.data.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-2 text-sm font-medium text-[rgb(var(--color-text-secondary))] hover:text-[rgb(var(--color-accent))] transition-colors group/link"
                    aria-label={`View ${project.data.title} source code on GitHub`}
                  >
                    <Icon name="github" size={16} class="group-hover/link:scale-110 transition-transform" />
                    {t['projects.viewCode']}
                  </a>
                )}
                {project.data.link && (
                  <a
                    href={project.data.link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-2 text-sm font-medium text-[rgb(var(--color-text-secondary))] hover:text-[rgb(var(--color-accent))] transition-colors group/link"
                    aria-label={`View ${project.data.title} live demo`}
                  >
                    <Icon name="external-link" size={16} class="group-hover/link:scale-110 transition-transform" />
                    {t['projects.viewProject']}
                  </a>
                )}
              </div>
            </div>
          </ScrollReveal>
        ))
      }
    </div>
  </div>
</section>
