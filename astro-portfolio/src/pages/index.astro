---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';

const profile = {
  name: 'Jo√£o Paulo Gon√ßalves Santos',
  shortName: 'Jo√£o Paulo',
  role: 'Frontend Engineer',
  subtitle:
    'Proactive Software Engineering student blending low-code automation with modern frontend engineering to build tools that matter.',
  location: 'Brazil',
  timezone: 'UTC-3',
  github: 'https://github.com/JPClow3',
  linkedin: 'https://linkedin.com/in/joaopaulosantosgo',
  email: 'joaopaulossantos00@gmail.com',
};

const currentFocus = [
  { label: 'Reading', value: 'The Pragmatic Programmer', icon: 'menu_book' },
  { label: 'Listening', value: 'Syntax.fm Podcast', icon: 'headphones' },
];

const techMarquee = ['HTML5', 'CSS3', 'JavaScript', 'TypeScript', 'Astro', 'React', 'Tailwind', 'Python'];

const projects = (await getCollection('projects'))
  .filter((project) => project.data.lang === 'en')
  .sort((a, b) => a.data.order - b.data.order)
  .slice(0, 4);

const experience = (await getCollection('experience'))
  .filter((job) => job.data.lang === 'en')
  .sort((a, b) => a.data.order - b.data.order);

const fallbackGithubActivity = [
  {
    repo: 'Portfolio',
    message: 'feat: modernize ui with bento-inspired portfolio layout',
    date: 'recent',
    url: 'https://github.com/JPClow3/Portfolio',
  },
  {
    repo: 'League-AI-Oracle',
    message: 'refactor: optimize match analysis algorithm',
    date: 'recent',
    url: 'https://github.com/JPClow3/League-AI-Oracle',
  },
  {
    repo: 'Resonant-Echoes',
    message: 'docs: update readme with setup guide',
    date: 'recent',
    url: 'https://github.com/JPClow3/Resonant-Echoes',
  },
];

async function getGithubActivity() {
  try {
    const response = await fetch('https://api.github.com/users/JPClow3/events/public', {
      headers: { Accept: 'application/vnd.github+json' },
    });

    if (!response.ok) return fallbackGithubActivity;

    const events = await response.json();
    const pushEvents = events
      .filter((event: any) => event.type === 'PushEvent' && event.payload?.commits?.length)
      .slice(0, 3)
      .map((event: any) => ({
        repo: event.repo.name.replace('JPClow3/', ''),
        message: event.payload.commits[0].message,
        date: new Date(event.created_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }),
        url: `https://github.com/${event.repo.name}/commit/${event.payload.commits[0].sha}`,
      }));

    return pushEvents.length ? pushEvents : fallbackGithubActivity;
  } catch {
    return fallbackGithubActivity;
  }
}

const recentGithubActivity = await getGithubActivity();

const formatDate = (date: Date) =>
  new Intl.DateTimeFormat('en-US', {
    month: 'short',
    year: 'numeric',
  }).format(date);
