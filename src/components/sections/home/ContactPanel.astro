---
import Icon from '@/components/common/Icon.astro';
import GlassPanel from './GlassPanel.astro';
import type { ContactPanelProps } from './types';

interface Props {
  contact: ContactPanelProps;
}

const { contact } = Astro.props;
---

<section id="contact" class="py-20 bg-[rgb(var(--color-bg-secondary)/0.35)]">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <GlassPanel class="p-8 sm:p-10">
      <h2 class="text-3xl sm:text-4xl font-bold">Contact Panel</h2>
      <p class="mt-3 text-[rgb(var(--color-text-muted))]">Open to front-end, QA automation, and collaboration opportunities.</p>

      <div class="mt-8 grid sm:grid-cols-2 gap-4 text-sm">
        <a href={`mailto:${contact.email}`} class="p-4 rounded-xl border border-[rgb(var(--color-border))] bg-[rgb(var(--color-bg-primary)/0.6)] inline-flex items-center gap-2"><Icon name="email" size={16}/> {contact.email}</a>
        <div class="p-4 rounded-xl border border-[rgb(var(--color-border))] bg-[rgb(var(--color-bg-primary)/0.6)] inline-flex items-center gap-2"><Icon name="location" size={16}/> {contact.location}</div>
        <a href={contact.linkedinUrl} target="_blank" rel="noopener noreferrer" class="p-4 rounded-xl border border-[rgb(var(--color-border))] bg-[rgb(var(--color-bg-primary)/0.6)] inline-flex items-center gap-2"><Icon name="linkedin" size={16}/> LinkedIn</a>
        <a href={contact.githubUrl} target="_blank" rel="noopener noreferrer" class="p-4 rounded-xl border border-[rgb(var(--color-border))] bg-[rgb(var(--color-bg-primary)/0.6)] inline-flex items-center gap-2"><Icon name="github" size={16}/> GitHub</a>
      </div>
    </GlassPanel>
  </div>
</section>
